
<MainScreen>
    FloatLayout:
        Button:
            size_hint: None, None
            width: 150
            font_size: 15
            text: "Escolher Profile"
            pos_hint: {"top": 0.95, "x": 0.05}
            on_press:
                root.manager.current = "initial_screen"
                root.manager.transition.direction = 'right'
        BoxLayout:
            orientation: "vertical"
            padding: 50
            Label:
                markup: True
                font_size: 30
                text: "[b]Automação[/b]"
            GridLayout
                cols: 4
                id: grid
                row_force_default: True,
                row_default_height: 50
                Spinner:
                    id: spinner_region
                    text: "Região"
                    values: []
                    on_text: root.spinner_clicked(spinner_region.text, "region")
                Spinner:
                    id: spinner_service
                    text: "Serviço"
                    values: []
                    on_text: root.spinner_clicked(spinner_service.text, "service", root)

                Button:
                    text: "Pegar informações"
                Button:
                    text: "Gerar arquivo"
            Label:
                text: ""
            Label:
                text: ""
            Label:
                text: ""